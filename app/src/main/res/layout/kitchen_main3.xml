<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".KitchenMain3Activity" android:id="@+id/coordinatorLayout_2" android:background="#C7EE9F">

    <FrameLayout
            android:id="@+id/myFragment"
            android:layout_width="396dp"
            android:layout_height="605dp"
            android:layout_above="@+id/actionBtn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.711"
            app:layout_constraintStart_toStartOf="parent">
        <CheckedTextView
                android:fontFamily="cursive"
                android:text="TIP -:: In case if lockdown situation,do not  understock or overstock your food items. A balance storage of food is very important to maintain balance in your society.Store combination of grocery item that are long lasting and good for health."
                android:layout_width="383dp"
                android:layout_height="152dp"
                android:id="@+id/checkedTextView"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/actionBtn" android:layout_marginBottom="432dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <ImageView
                android:layout_width="407dp"
                android:layout_height="577dp" app:srcCompat="@drawable/kitchen"
                android:id="@+id/imageView5" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/actionBtn" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/checkedTextView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/myFragment"
                android:layout_marginStart="8dp"/>


    </FrameLayout>

    <LinearLayout
            android:id="@+id/actionBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button android:layout_width="14dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="Add Kitchen Items"
                android:id="@+id/actionBtn1"
                android:onClick="btnOne" style="@style/Widget.MaterialComponents.Button"/>

        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/actionBtn2"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="Whats in your kitchen"
                android:onClick="btnTwo" style="@style/Widget.MaterialComponents.Button.Icon"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>